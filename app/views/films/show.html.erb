
<p><% if @film.img? %>
  <%= image_tag @film.img.url, class: 'img-fluid rounded-start'%>
<% else %>
  <%= image_tag "non_img.png", class: "img-fluid rounded-start" %>
<% end %></p>

<h5><%= @film.title %></h5>

<p><small class="text-muted">
  Tags:
    <%= render @film.tags %>
</small></p>

<p class="card-text"><%= render 'shared/rating_stars', id: @film.id, rating: @film.rating %></p>

<br>

<p><%= @film.text %></p>

<%= link_to 'Back', root_path, class: 'btn btn-outline-warning my-4'%>





